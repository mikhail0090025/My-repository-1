define(["OK/utils/dom","OK/cookie"],function(c,a){function b(){}b.prototype.toggle=function(){this.element.classList.toggle(this.toggledClass);if(this.togglerId){var d=this.element.classList.contains(this.toggledClass)?1:0;a.setCookie("_tglr"+this.togglerId,d,this.duration,"/");}};b.prototype.activate=function(d){this.element=d;this.targetElement=d;this.togglerId=d.getAttribute("data-toggler-id");this.toggledClass=d.getAttribute("data-toggled-class")||"";this.targetElementClass=d.getAttribute("data-target-class");this.duration=parseInt(d.getAttribute("data-duration"),10)||1;this.toggleBound=this.toggle.bind(this);if(this.targetElementClass){this.targetElement=c.firstByClass(d,this.targetElementClass);}this.targetElement.addEventListener("click",this.toggleBound);};b.prototype.deactivate=function(){this.targetElement.removeEventListener("click",this.toggleBound);};return b;});